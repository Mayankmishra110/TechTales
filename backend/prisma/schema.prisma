generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String?
  password String
  posts    Post[]
}

model Blog {
  id  Int    @id @default(autoincrement())
  authorId   Int
  content    String
  title       String
  published Boolean  @default(false)
  author    User @relation(fields: [authorId], references: [id])
}